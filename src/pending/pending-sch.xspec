        <x:expect-assert id="new-feature"/>
        <x:expect-assert count="1"/>        
      </x:pending>
    </x:scenario>
    <x:scenario label="Other aspects of test case 1">
      <x:pending label="not written yet">
        <x:expect-assert id="new-feature"/>
        <x:expect-assert count="1"/>        
      </x:pending>
      <x:expect-rule context="child/*"/>
    </x:scenario>
  </x:scenario>  
</x:description>

