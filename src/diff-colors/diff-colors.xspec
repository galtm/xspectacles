          <title class="heading">Text</title>
          <para>Some text</para>
          <para>More interesting text</para>
        </section>
        <section class="sect1">
          <title class="heading">Attributes</title>
          <para>First</para>
          <para id="p2">Second</para>
          <para id="p33">Third</para>
        </section>
      </doc>
    </x:expect>
  </x:scenario>
</x:description>

